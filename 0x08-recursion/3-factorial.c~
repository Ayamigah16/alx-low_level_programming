#include "main.h"

/**
 * factorial - Returns the factorial of a number
 * @n: The number to find the factorial of
 * Return: Always return the factorial
 */

int factorial(int n)
{
int fact = 1;

if (n < 0)
{
return (-1);
}
else if (n == 0)
{
return (1);
}
else
{
return (n * factorial(n - 1));
}
}
